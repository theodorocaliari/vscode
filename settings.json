{
    // Workbench
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Dracula Soft",
    "workbench.editor.labelFormat": "short",
    "workbench.startupEditor": "newUntitledFile",
    
    // Editor settings
    "editor.wordWrap": "on",
    "editor.fontSize": 12,
    "editor.lineHeight": 20,
    "terminal.integrated.fontSize": 12,
    "editor.tabSize": 2,
    //"editor.fontFamily": "JetBrains Mono, Fira Code",
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.renderLineHighlight": "gutter",
    "editor.rulers": [80, 120],
    "editor.parameterHints.enabled": false,
    "editor.quickSuggestionsDelay": 1500,
    "editor.guides.bracketPairs":"active",
    "editor.bracketPairColorization.enabled": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.hover.enabled": false,
    "editor.inlineSuggest.enabled": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    },
    "extensions.ignoreRecommendations": true,

    // VSCode stuff
    "breadcrumbs.enabled": true,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "javascript.updateImportsOnFileMove.enabled": "never",
    "typescript.updateImportsOnFileMove.enabled": "never",
    
    // Emmet
    "emmet.syntaxProfiles": { "javascript": "jsx" },
    "emmet.includeLanguages": { "javascript": "javascriptreact", "django-html":"html" },
    
    // Extensions
    "diffEditor.ignoreTrimWhitespace": false,
    "material-icon-theme.folders.associations": {
      "domain": "core",
      "infra": "app",
      "main": "public",
      "presentation": "connection",
      "cryptography": "secure",
      "entities": "class",
      "repositories": "mappings",
      "protocols": "resource",
      "useCases": "components",
      "adapters": "connection",
      "factories": "container",
      "globals": "global",
      "ui": "views"
    },
    "material-icon-theme.files.associations": {
      "ormconfig.json": "database",
      "tsconfig.json": "tune",
      ".lintstagedrc.json": "tune"
    },
    "workbench.editor.untitled.hint": "hidden",
    "polacode.transparentBackground": true,
    "polacode.shadow": "rgba(0, 0, 0, 0) 0px 0 0",
    "editor.minimap.enabled": false,
    "workspaceExplorer.workspaceStorageDirectory": "d:\\estudos\\vscode-workspaces",

  }
